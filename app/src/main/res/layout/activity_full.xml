<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#39975F">

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Love Shayari"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/share"
            android:id="@+id/share2"/>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:src="@drawable/more" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:src="@drawable/tool1"
            android:id="@+id/b1"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_30sdp"
            android:id="@+id/t1"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/tool2"
            android:id="@+id/b2"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_18sdp"
        android:layout_weight="0.5"
        android:background="#E91EB6"
        android:gravity="center"
        android:text="name"
        android:textAlignment="center"
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#46882A">

            <ImageView
                android:id="@+id/b3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/baseline_file_copy_24" />

            <ImageView
                android:id="@+id/b_lift"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/baseline_keyboard_arrow_left_24" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/tool3" />

            <ImageView
                android:id="@+id/b_right"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:src="@drawable/share" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>